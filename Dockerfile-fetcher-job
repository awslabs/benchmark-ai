FROM continuumio/miniconda3 as base

RUN conda update -n base -c conda-forge conda

######################
# Infrequent changes #
######################
COPY ./fetcher-job/environment.yml /tmp/environment.yml

RUN conda env create -f /tmp/environment.yml -p /opt/fetcher-job

####################
# Frequent changes #
####################

COPY . /data/benchmark-ai
WORKDIR /data/benchmark-ai/fetcher-job

RUN /opt/fetcher-job/bin/pip install -r requirements.txt
RUN /opt/fetcher-job/bin/python3 setup.py install

########################################
# Build the final image
########################################
FROM ubuntu:18.04

COPY --from=base /opt/fetcher-job /opt/fetcher-job

# A workdir only for convenience
WORKDIR /opt/fetcher-job/bin

ENTRYPOINT [ "/opt/fetcher-job/bin/bai_fetcher_job" ]
