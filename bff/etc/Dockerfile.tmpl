FROM clojure:lein-alpine
RUN mkdir -p /srv/app
WORKDIR /srv/app
COPY @@JAR_FILE@@ /srv/app/
LABEL version="@@VERSION@@" \
        vcs.tag="@@TAG@@" \
        repo="@@REPO_SITE@@" \
        organization="@@ORGANIZATION@@" \
        release.name="@@RELEASE_NAME@@" \
        maintainer="@@AUTHOR@@"
EXPOSE @@SVC_PORT@@
CMD ["java", "-jar", "@@JAR_FILENAME@@"]
