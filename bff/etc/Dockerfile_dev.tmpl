FROM clojure
RUN apt-get update && apt-get install -y \
        make
RUN mkdir -p /srv/app
WORKDIR /srv/app
COPY project.clj /srv/app/
RUN lein deps
LABEL version="@@VERSION@@" \
        vcs.tag="@@TAG@@" \
        repo="@@REPO_SITE@@" \
        organization="@@ORGANIZATION@@" \
        release.name="@@RELEASE_NAME@@" \
        maintainer="@@AUTHOR@@"
CMD [/bin/bash]
