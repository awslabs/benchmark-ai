FROM continuumio/miniconda3 as base

RUN conda update -n base -c conda-forge conda

######################
# Infrequent changes #
######################
COPY ./watcher/environment.yml /tmp/environment.yml

RUN conda env create -f /tmp/environment.yml -p /opt/watcher

####################
# Frequent changes #
####################

COPY . /data/benchmark-ai
WORKDIR /data/benchmark-ai/watcher

RUN /opt/watcher/bin/pip install -r requirements.txt
RUN /opt/watcher/bin/python3 setup.py install

########################################
# Build the final image
########################################
FROM ubuntu:18.04

COPY --from=base /opt/watcher /opt/watcher

# A workdir only for convenience
WORKDIR /opt/watcher/bin

ENTRYPOINT [ "/bin/bash", "-c" ]

CMD [ "/opt/watcher/bin/bai-watcher" ]
